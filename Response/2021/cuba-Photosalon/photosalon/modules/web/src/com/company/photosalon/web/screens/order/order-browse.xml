<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://orderBrowse.caption"
        focusComponent="ordersTable"
        messagesPack="com.company.photosalon.web.screens.order">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="com.company.photosalon.entity.Order">
            <view extends="_local">
                <property name="customer_info" view="_minimal">
                    <property name="custName"/>
                    <property name="addres"/>
                    <property name="email"/>
                </property>
            </view>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from photosalon_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ordersTable"
                dataLoader="ordersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ordersTable"
                    width="100%"
                    dataContainer="ordersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="order_info"/>
                <column id="delivery_info"/>
                <column id="customer_info"/>
                <column id="transaction_info"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ordersTable.create"/>
                <button id="editBtn" action="ordersTable.edit"/>
                <button id="removeBtn" action="ordersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
